# ThreadSanitizer (TSan) - Race condition detection
test-tsan:
	@echo "ğŸ§µ Building with ThreadSanitizer (TSan)..."
	@echo "========================================="
	@echo "âš ï¸  This will rebuild the entire project with -fsanitize=thread"
	@echo ""
	@echo "ğŸ”§ Cleaning previous build..."
	@cd .. && $(MAKE) -f GNUmakefile distclean >/dev/null 2>&1 || true
	@echo "ğŸ”§ Setting up autotools..."
	@cd .. && $(MAKE) -f GNUmakefile setup-autotools
	@echo "ğŸ”§ Configuring with TSan flags..."
	@cd .. && ./configure \
		CFLAGS="-g -O1 -fsanitize=thread -fno-omit-frame-pointer" \
		LDFLAGS="-fsanitize=thread" \
		--enable-drivers=g15,linux_input,debug \
		--enable-libusb \
		--enable-debug \
		--prefix=/usr \
		--sysconfdir=/etc \
		--sbindir=/usr/bin
	@echo "ğŸ”¨ Building with TSan..."
	@cd .. && $(MAKE) -f Makefile
	@echo ""
	@echo "âœ… TSan build complete!"
	@echo "ğŸ“ Run 'make test-tsan-quick' to test with current build"
	@echo "ğŸ“ Or manually run: ./clients/lcdproc/lcdproc -f"

test-tsan-quick:
	@echo "ğŸ§µ Running tests with ThreadSanitizer..."
	@echo "========================================"
	@if ! ldd ../clients/lcdproc/lcdproc 2>/dev/null | grep -q "libtsan"; then \
		echo "âŒ Not built with ThreadSanitizer!"; \
		echo "ğŸ’¡ Run 'make test-tsan' first to build with TSan"; \
		exit 1; \
	fi
	@echo "Testing lcdproc client for race conditions..."
	@echo ""
	@echo "âš ï¸  Starting lcdproc in foreground mode (5 seconds)..."
	@echo "âš ï¸  Press Ctrl+C to stop, or wait for timeout"
	@echo ""
	@timeout 5 ../clients/lcdproc/lcdproc -f -c ../clients/lcdproc/lcdproc.conf 2>&1 || true
	@echo ""
	@echo "âœ… TSan test completed!"
	@echo "ğŸ“ Check output above for any race condition warnings"
	@echo "ğŸ“ For interactive testing: ../clients/lcdproc/lcdproc -f"

