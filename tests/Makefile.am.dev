# Memory leak detection (AddressSanitizer - built-in)
test-memcheck: $(check_PROGRAMS)
	@echo "ğŸ” Running memory leak detection with AddressSanitizer..."
	@echo "=========================================================="
	@echo "â„¹ï¸  Tests are compiled with -fsanitize=address -fsanitize=leak"
	@echo "â„¹ï¸  ASan will automatically detect memory leaks and errors"
	@echo ""
	@if ASAN_OPTIONS=detect_leaks=1 ./test_unit_g15 2>&1 | tee /tmp/asan.out; then \
		if grep -q "LeakSanitizer" /tmp/asan.out 2>/dev/null; then \
			echo ""; \
			echo "âŒ Memory leaks detected! See output above for details"; \
			exit 1; \
		else \
			echo ""; \
			echo "âœ… No memory leaks detected"; \
		fi; \
	else \
		if grep -q "LeakSanitizer" /tmp/asan.out 2>/dev/null; then \
			echo ""; \
			echo "âŒ Memory leaks detected! See output above for details"; \
			exit 1; \
		else \
			echo ""; \
			echo "âŒ Tests failed - see output above"; \
			exit 1; \
		fi; \
	fi

# Test coverage analysis (requires llvm and gcovr)
test-coverage:
	@echo "ğŸ“Š Running test coverage analysis..."
	@echo "===================================="
	@# Check dependencies
	@if ! command -v llvm-cov >/dev/null 2>&1; then \
		echo "âŒ llvm-cov not found - install with: sudo pacman -S llvm"; \
		exit 1; \
	fi; \
	if ! command -v gcovr >/dev/null 2>&1; then \
		echo "âŒ gcovr not found - install with: sudo pacman -S gcovr"; \
		exit 1; \
	fi
	@# Clean previous coverage data
	@echo "ğŸ§¹ Cleaning previous coverage data..."
	@rm -f *.gcov *.gcno *.gcda coverage.xml coverage.html coverage.info
	@# Build with coverage flags
	@echo "ğŸ”§ Building with coverage flags..."
	@$(MAKE) clean >/dev/null 2>&1
	@$(MAKE) CC=clang CFLAGS="-Wall -Wextra -std=c11 -g -O0 --coverage" test_unit_g15
	@# Run tests to generate coverage data
	@echo "ğŸ§ª Running tests to generate coverage data..."
	@./test_unit_g15 >/dev/null 2>&1 || true
	@# Generate coverage report
	@echo "ğŸ“ˆ Generating coverage report..."
	@llvm-cov gcov *.gcno >/dev/null 2>&1 || echo "âš ï¸ Some coverage files may not have been generated"
	@if ls *.gcov >/dev/null 2>&1; then \
		gcovr --gcov-executable="llvm-cov gcov" --xml coverage.xml --html coverage.html . 2>/dev/null || echo "âš ï¸ gcovr failed, continuing..."; \
		if [ -f coverage.xml ]; then \
			echo "ğŸ“‹ Coverage Summary:"; \
			gcovr --gcov-executable="llvm-cov gcov" . 2>/dev/null || echo "âš ï¸ Could not generate summary"; \
		fi; \
		echo "ğŸ“Š Individual File Coverage:"; \
		find . -name "*.gcov" -exec echo "File: {}" \; -exec head -3 {} \; 2>/dev/null || echo "No detailed coverage files found"; \
		echo ""; \
		echo "âœ… Coverage analysis complete!"; \
		echo "ğŸ“„ Coverage files: *.gcov, coverage.xml, coverage.html"; \
	else \
		echo "âŒ No coverage data generated - check build flags"; \
		exit 1; \
	fi


# Multi-compiler testing - builds entire project with different compilers
test-compilers: 
	@echo "ğŸ”§ Testing with multiple compilers..."
	@for compiler in clang gcc; do \
		echo "Testing with $$compiler..."; \
		if command -v $$compiler >/dev/null 2>&1; then \
			$(MAKE) mostlyclean >/dev/null 2>&1; \
			if $(MAKE) -C .. -f Makefile CC=$$compiler mostlyclean >/dev/null 2>&1 && $(MAKE) -C .. -f Makefile CC=$$compiler all >/dev/null 2>&1 && $(MAKE) CC=$$compiler check >/dev/null 2>&1; then \
				echo "âœ… $$compiler build and test successful"; \
			else \
				echo "âŒ $$compiler build failed"; \
			fi; \
		else \
			echo "âš ï¸ $$compiler not available"; \
		fi; \
	done

